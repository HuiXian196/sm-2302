%% Tutorial 2

%% Question 1 - Semilog plot

x = 0:1:6;
y = exp(x);

figure;
semilogy(x, y, 'ms', 'MarkerSize', 10, 'LineWidth', 4, 'LineStyle', 'none');

% Add labels and legend
xlabel('Years');
ylabel('Students');
title('Number of students in Statistics class');

xlim([0 6]);

%% Question 2 - Subplot and axis modes

figure;
load('mitMap.mat');

% First subplot
subplot(2, 2, 1);
imagesc(mit);
colormap(cMap);
axis square;
title('Square');

% Second subplot
subplot(2, 2, 2);
imagesc(mit);
colormap(cMap);
axis tight;
title('Tight');

% Third subplot
subplot(2, 2, 3);
imagesc(mit);
colormap(cMap);
axis equal;
title('Equal');

% Fourth subplot
subplot(2, 2, 4);
imagesc(mit);
colormap(cMap);
axis xy;
title('XY');

%% Question 3 - Interpolation and surface plots ----- START HERE

Z0 = rand(5, 5); % Generate random heights for the surface

x = 1:5; y = 1:5;
[X0, Y0] = meshgrid(x, y);

x1 = 1:0.1:5; y1 = x1;
[X1, Y1] = meshgrid(x1, y1);

% Perform cubic interpolation
Z1 = interp2(X0, Y0, Z0, X1, Y1, 'cubic');

figure;
surf(X1, Y1, Z1);
colormap('hsv');
shading interp;
colorbar;
clim([0 1]);

%% Question 4 - Fun with find

function ind = findNearest(array, desiredVal)
    % Calculate the absolute differences between each element and the desired value
    differences = abs(array - desiredVal);

    % Find the minimum difference
    minDiff = min(differences);

    % Find the indices of all elements that have the minimum difference
    ind = find(differences == minDiff);
end

x = [1 3 5 7];
desiredVal = 4;
ind = findNearest(x, desiredVal);
disp(ind);

%% Question 5 - Loops and flow control

function loopTest(N)
    for n = 1:N
        result2 = mod(n, 2);
        result3 = mod(n, 3);
        if result2 == 0 && result3 == 0
            disp([num2str(n) ' is divisible by both 2 AND 3'])
        elseif result2 == 0
            disp([num2str(n) ' is divisible by 2'])
        elseif result3 == 0
            disp([num2str(n) ' is divisible by 3'])
        else 
            disp([num2str(n) ' is NOT divisible by 2 or 3'])
        end
    end
end

loopTest(10);

